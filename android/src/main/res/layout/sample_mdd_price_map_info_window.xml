<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:background="#ffffff"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:paddingLeft="0dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingBottom="0dp">

        <TextView
            android:id="@+id/sourceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="sourceText"
            android:textColor="#000000"
            android:textSize="10dp"
            android:typeface="normal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#4c1192"
                app:cardCornerRadius="6dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:paddingTop="0dp"
                    android:paddingRight="6dp"
                    android:paddingBottom="2dp"
                    android:text="100~200만원"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    android:typeface="normal"
                    tools:layout_conversion_absoluteHeight="21dp"
                    tools:layout_conversion_absoluteWidth="72dp"
                    tools:layout_editor_absoluteX="14dp"
                    tools:layout_editor_absoluteY="13dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-9dp"
                android:layout_marginBottom="0dp"
                android:foregroundGravity="top"
                android:gravity="top"
                android:lineSpacingExtra="0dp"
                android:lineSpacingMultiplier="0"
                android:padding="0dp"
                android:text="▼"
                android:textAllCaps="false"
                android:textColor="#4c1192"
                android:textColorHighlight="#4c1192"
                android:textColorHint="#4c1192"
                android:textColorLink="#4c1192"
                android:textSize="14dp"
                android:typeface="normal" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-15dp"
            android:layout_marginRight="0dp"
            android:paddingLeft="2dp"
            android:paddingTop="0dp"
            android:paddingRight="2dp"
            android:paddingBottom="0dp"
            app:cardCornerRadius="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="0dp"
                android:gravity="center_horizontal|center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingTop="0dp"
                android:paddingRight="2dp"
                android:paddingBottom="0dp">

                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:isIndicator="false"
                    android:max="1"
                    android:numStars="1"
                    android:progress="1"
                    android:rating="1"
                    tools:layout_conversion_absoluteHeight="16dp"
                    tools:layout_conversion_absoluteWidth="16dp" />

                <TextView
                    android:id="@+id/ratingText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="0.0"
                    android:textColor="#000000"
                    android:textColorHighlight="#000000"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    android:typeface="normal"
                    tools:layout_conversion_absoluteHeight="13dp"
                    tools:layout_conversion_absoluteWidth="14dp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
